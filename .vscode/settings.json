{
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.classAttributes": ["class", "ui"],
  "tailwindCSS.experimental.classRegex": [["ui:\\s*{([^)]*)\\s*}", "(?:'|\"|`)([^']*)(?:'|\"|`)"]],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "editor.formatOnType": false,
  "eslint.format.enable": true,
  "scss.lint.unknownAtRules": "ignore",
  "prettier.configPath": "prettier.config.js",
  "prettier.useEditorConfig": false,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "oxc.enable": true,
  "explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"tsconfig.json": "tsconfig.*.json, env.d.ts",
		"nuxt.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*, uno.config.*, tailwind.config.*, .eslint*, eslint*, .prettier*, prettier*, .editorconfig",
		"package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, bun.*, .npmrc"
	},
}
